<form class="dolmenwood" autocomplete="off">
    <header class="dw-header">
        <div class="dw-row">
            {{> player-data ctx=this}}
        </div>

        <div class="dw-grid-2">
            <div class="dw-field">
                {{> health-points ctx=this}}
            </div>

            <div class="dw-field">
                {{> armor-class ctx=this}}

                <div class="dw-field">
                    <label>Attack</label>
                    <input
                            name="dw.combat.attack"
                            type="text"
                            value="{{dw.combat.attack}}"
                            placeholder="+1 melee / +2 missile"
                    />
                </div>
            </div>

            <div class="dw-avatar">
                <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
            </div>
        </div>
    </header>

    <section class="dw-block">
        {{> movement ctx=this}}
    </section>

    <section class="dw-block">
        {{> abilities ctx=this}}
    </section>

    <section class="dw-block">
        {{> save-throws ctx=this}}
    </section>

    <section class="dw-block">
        {{> skill-targets ctx=this}}
    </section>

    <section class="dw-block">
        {{> kindred-class-traits ctx=this}}
    </section>

    <section class="dw-block">
        {{> languages ctx=this}}
    </section>
</form>
