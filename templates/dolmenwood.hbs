<form class="dolmenwood-sheet" autocomplete="off">
    <div class="dolmenwood-sheet__layout">
        <div class="dolmenwood-sheet__content">
            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__main-tab tab active"
                data-tab="main"
                data-group="primary"
            >
                {{~> dolmenwood-main-tab ctx=this~}}
            </div>

            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__equipment-tab tab"
                data-tab="equipment"
                data-group="primary"
            >
                {{~> dolmenwood-equipment-tab ctx=this~}}
            </div>

            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__spells-abilities-tab tab"
                data-tab="spells-abilities"
                data-group="primary"
            >
                {{~> dolmenwood-spells-abilities-tab ctx=this~}}
            </div>

            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__details-tab tab"
                data-tab="details"
                data-group="primary"
            >
                {{~> dolmenwood-details-tab ctx=this~}}
            </div>

        </div>

        <div class="dolmenwood-sheet__tabs tabs" data-group="primary">
            <button
                type="button"
                class="dolmenwood-sheet__tab item active"
                data-tab="main"
                data-group="primary"
            >{{localize "DOLMENWOOD.UI.Main"}}</button>
            <button
                type="button"
                class="dolmenwood-sheet__tab item"
                data-tab="equipment"
                data-group="primary"
            >{{localize "DOLMENWOOD.UI.Equipment"}}</button>
            <button
                type="button"
                class="dolmenwood-sheet__tab item"
                data-tab="spells-abilities"
                data-group="primary"
            >{{localize "DOLMENWOOD.UI.SpellsAbilities"}}</button>
            <button
                type="button"
                class="dolmenwood-sheet__tab item"
                data-tab="details"
                data-group="primary"
            >{{localize "DOLMENWOOD.UI.Details"}}</button>
        </div>
    </div>
</form>
