<form class="dolmenwood-sheet" autocomplete="off">
    <div class="dolmenwood-sheet__layout">
        <div class="dolmenwood-sheet__content">
            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__main-tab tab {{#if tabs.main.cssClass}}{{tabs.main.cssClass}}{{else}}active{{/if}}"
                data-tab-panel="main"
                data-tab="main"
                data-group="dolmenwood-sheet-tabs"
            >
                {{~> dolmenwood-main-tab ctx=this~}}
            </div>

            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__equipment-tab tab {{tabs.equipment.cssClass}}"
                data-tab-panel="equipment"
                data-tab="equipment"
                data-group="dolmenwood-sheet-tabs"
            >
                {{~> dolmenwood-equipment-tab ctx=this~}}
            </div>

            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__spells-abilities-tab tab {{tabs.[spells-abilities].cssClass}}"
                data-tab-panel="spells-abilities"
                data-tab="spells-abilities"
                data-group="dolmenwood-sheet-tabs"
            >
                {{~> dolmenwood-spells-abilities-tab ctx=this~}}
            </div>

            <div
                class="dolmenwood-sheet__tab-panel dolmenwood-sheet__details-tab tab {{tabs.details.cssClass}}"
                data-tab-panel="details"
                data-tab="details"
                data-group="dolmenwood-sheet-tabs"
            >
                {{~> dolmenwood-details-tab ctx=this~}}
            </div>

        </div>

        <div class="dolmenwood-sheet__tabs tabs" data-group="dolmenwood-sheet-tabs">
            <button
                type="button"
                class="dolmenwood-sheet__tab item {{#if tabs.main.cssClass}}{{tabs.main.cssClass}}{{else}}active{{/if}}"
                data-action="tab"
                data-tab-target="main"
                data-tab="main"
                data-group="dolmenwood-sheet-tabs"
            >{{localize "DOLMENWOOD.UI.Main"}}</button>
            <button
                type="button"
                class="dolmenwood-sheet__tab item {{tabs.equipment.cssClass}}"
                data-action="tab"
                data-tab-target="equipment"
                data-tab="equipment"
                data-group="dolmenwood-sheet-tabs"
            >{{localize "DOLMENWOOD.UI.Equipment"}}</button>
            <button
                type="button"
                class="dolmenwood-sheet__tab item {{tabs.[spells-abilities].cssClass}}"
                data-action="tab"
                data-tab-target="spells-abilities"
                data-tab="spells-abilities"
                data-group="dolmenwood-sheet-tabs"
            >{{localize "DOLMENWOOD.UI.SpellsAbilities"}}</button>
            <button
                type="button"
                class="dolmenwood-sheet__tab item {{tabs.details.cssClass}}"
                data-action="tab"
                data-tab-target="details"
                data-tab="details"
                data-group="dolmenwood-sheet-tabs"
            >{{localize "DOLMENWOOD.UI.Details"}}</button>
        </div>
    </div>
</form>
