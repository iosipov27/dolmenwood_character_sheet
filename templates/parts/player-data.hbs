  </div>
  <div class="dw-field">
    <span class="editable-field" data-field="dw.meta.alignment" {{#unless ctx.dw.meta.alignment}}style="display:none;"{{/unless}}>{{ctx.dw.meta.alignment}}</span>
    <input
      id="dw-alignment"
      placeholder="{{localize "DOLMENWOOD.UI.Alignment"}}"
      class="edit-input"
      name="dw.meta.alignment"
      value="{{ctx.dw.meta.alignment}}"
