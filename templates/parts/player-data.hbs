<div class="player-data">
  <div class="dw-field player-data__name">
    <span class="editable-field" data-field="name" {{#unless ctx.actor.name}}style="display:none;"{{/unless}}>{{ctx.actor.name}}</span>
    <input
      id="dw-name"
      class="edit-input"
      name="name"
      placeholder="{{localize "DOLMENWOOD.UI.Name"}}"
      value="{{ctx.actor.name}}"
      {{#if ctx.actor.name}}style="display:none;"{{/if}}
    />
  </div>

  <div class="dw-field">
    <span
      class="editable-field"
      data-field="dw.meta.kindredClass"
