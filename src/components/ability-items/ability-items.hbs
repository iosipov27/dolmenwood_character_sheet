<div class="dw-ability-items">
  <div
    class="dw-ability-items__header"
    data-action="dw-toggle-collapsible-section"
    aria-expanded="true"
  >
    <h2>{{localize "DOLMENWOOD.UI.Abilities"}}</h2>

  </div>

  <div class="dw-ability-items__scroll">
    {{#unless ctx.view.items.abilities.length}}
      <p class="dw-hint">{{localize "DOLMENWOOD.UI.AbilitiesDropHint"}}</p>
    {{/unless}}
    {{#if ctx.view.items.abilities.length}}
      <ul class="dw-ability-items__list">
        {{#each ctx.view.items.abilities as |ability|}}
          <li class="dw-ability-items__item">
            <button
              type="button"
              class="dw-ability-items__open"
              data-action="dw-open-item"
              data-item-id="{{ability.id}}"
            >
              <img class="dw-ability-items__icon" src="{{ability.img}}" alt="" />
              <span class="dw-ability-items__name">{{ability.name}}</span>
            </button>

            <button
              type="button"
              class="dw-x"
              data-action="dw-delete-item"
              data-item-id="{{ability.id}}"
              aria-label="{{localize 'DOLMENWOOD.UI.Remove'}}"
              data-tooltip="{{localize 'DOLMENWOOD.UI.Remove'}}"
            >
              &times;
            </button>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="dw-hint">{{localize "DOLMENWOOD.UI.AbilitiesEmpty"}}</p>
    {{/if}}
  </div>
</div>
