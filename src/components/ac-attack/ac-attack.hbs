<div class="dw-ac-attack">
  <button
    type="button"
    class="dw-ac-attack__edit"
    data-action="dw-open-combat-bonuses-dialog"
    aria-label="{{localize 'DOLMENWOOD.UI.Edit'}}"
    title="{{localize 'DOLMENWOOD.UI.EditCombatBonuses'}}"
  >
    <i class="fas fa-pen"></i>
  </button>

  <div class="dw-ac-attack__armor">
    <label>{{localize "DOLMENWOOD.UI.ArmorClass"}}</label>
    <input
      class="dw-number-input"
      name="{{ctx.dwCombat.nameAc}}"
      type="number"
      value="{{ctx.dwCombat.ac}}"
    />
  </div>

  <div class="dw-ac-attack__attack">
    <button
      type="button"
      class="attack-btn"
      data-action="dw-roll-attack"
      data-attack="melee"
      title="{{localize 'DOLMENWOOD.UI.MeleeAttack'}}"
    >
      <i class="fas fa-sword"></i>
    </button>

    <button
      type="button"
      class="attack-btn"
      data-action="dw-roll-attack"
      data-attack="ranged"
      title="{{localize 'DOLMENWOOD.UI.RangedAttack'}}"
    >
      <i class="fas fa-bow-arrow"></i>
    </button>
  </div>

</div>
